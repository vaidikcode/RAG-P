# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8090/api
REACT_APP_PYTHON_RAG_URL=http://localhost:8080

# Environment
REACT_APP_ENV=development

# Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.txt

# Feature Flags
REACT_APP_ENABLE_CHAT_HISTORY=true
REACT_APP_ENABLE_SOURCE_ATTRIBUTION=true
REACT_APP_ENABLE_DOCUMENT_PREVIEW=false

# UI Configuration
REACT_APP_THEME=light
REACT_APP_BRAND_NAME=RAG Assistant

# Analytics (if using)
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Error Tracking (if using Sentry)
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# WebSocket Configuration (for real-time features)
REACT_APP_WS_URL=ws://localhost:8090/ws
